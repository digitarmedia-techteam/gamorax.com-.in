<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1. The Main Dark Background Color -->
    <!-- Using #050505 creates a nice deep black look -->
    <solid android:color="#050505" />

    <!-- 2. The Rounded Corners -->
    <!-- 32dp matches the very round style in the image -->
    <corners android:radius="32dp" />

    <!-- 3. The Thin Grey Border (Outline) -->
    <!-- #333333 is subtle; use #555555 if you want it brighter -->
    <stroke
        android:width="1dp"
        android:color="#333333" />

</shape>