<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2050807" /> <!-- ~95% Deep Black/Green -->
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" /> <!-- Subtle White Border -->
        </shape>
    </item>
    
    <!-- Neon Top Glow (Gradient) -->
    <item android:top="1dp" android:left="50dp" android:right="50dp" android:height="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0039FF14"
                android:centerColor="#CC39FF14"
                android:endColor="#0039FF14"
                android:angle="0" />
        </shape>
    </item>
</layer-list>
