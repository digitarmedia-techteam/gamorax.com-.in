<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- GLOW LAYER (outer light) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#335AED70" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <!-- MAIN BUTTON -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#6EFF85" />
        </shape>
    </item>

</layer-list>
