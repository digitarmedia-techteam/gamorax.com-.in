<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- GLOW -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#336EFF85"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

    <!-- MAIN BUTTON -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#6EFF85"/>
        </shape>
    </item>

</layer-list>
