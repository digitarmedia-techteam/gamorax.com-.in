<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_gradient">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Avatar Section -->
            <View
                android:id="@+id/avatarGlow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_pill_tab"
                android:backgroundTint="@color/premium_neon_green"
                android:alpha="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileAvatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="4dp"
                android:src="@drawable/profile_avatar_v2"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:strokeColor="@color/premium_neon_green"
                app:strokeWidth="2dp"
                app:layout_constraintBottom_toBottomOf="@id/avatarGlow"
                app:layout_constraintEnd_toEndOf="@id/avatarGlow"
                app:layout_constraintStart_toStartOf="@id/avatarGlow"
                app:layout_constraintTop_toTopOf="@id/avatarGlow" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="CyberNinja99"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatarGlow" />

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.8"
                android:text="Level 42"
                android:textColor="@color/premium_neon_green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUsername" />

            <ProgressBar
                android:id="@+id/pbLevel"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="180dp"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:progress="75"
                android:progressDrawable="@drawable/bg_pill_tab"
                android:progressTint="@color/premium_neon_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLevel" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7500 / 10000 XP"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/pbLevel"
                app:layout_constraintStart_toStartOf="@id/pbLevel"
                app:layout_constraintEnd_toEndOf="@id/pbLevel"/>


            <!-- Stats Row -->
            <LinearLayout
                android:id="@+id/layoutStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_glass_card"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintTop_toBottomOf="@id/pbLevel">

                <!-- Stat 1: Wins -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="245"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wins"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Stat 2: Loss -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="42"
                        android:textColor="@color/premium_power_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loss"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Stat 3: Mana -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="1.2k"
                        android:textColor="@color/premium_mana_blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mana"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Stat 4: Power -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="950"
                        android:textColor="@color/premium_neon_green"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>


            <!-- Achievements Section -->
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Your Achievements"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutStats" />

            <HorizontalScrollView
                android:id="@+id/scrollTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTitle">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Tab 1: All -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_pill_tab"
                        android:backgroundTint="@color/premium_neon_green"
                        android:text="All"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp" />

                    <!-- Tab 2: Rare -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_glass_card"
                        android:text="Rare"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp" />

                    <!-- Tab 3: Epic -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_glass_card"
                        android:text="Epic"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp" />

                     <!-- Tab 4: Legendary -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_glass_card"
                        android:text="Legendary"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="8dp" />

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Achievement List (Mockup) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/scrollTabs">

                <!-- Achievement Item 1 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_glass_card"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAch1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icon_stat_wins"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvAchTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="First Blood"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tvReward1"
                        app:layout_constraintStart_toEndOf="@id/imgAch1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Win your first multiplayer match"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/tvAchTitle1"
                        app:layout_constraintStart_toStartOf="@id/tvAchTitle1"
                        app:layout_constraintTop_toBottomOf="@id/tvAchTitle1" />

                     <TextView
                        android:id="@+id/tvReward1"
                         android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+100 XP"
                        android:textColor="@color/premium_neon_green"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Achievement Item 2 (Locked) -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_glass_card"
                    android:alpha="0.7"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAch2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icon_achievement_locked"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/tvAchTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Unstoppable"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tvReward2"
                        app:layout_constraintStart_toEndOf="@id/imgAch2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Win 10 matches in a row"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/tvAchTitle2"
                        app:layout_constraintStart_toStartOf="@id/tvAchTitle2"
                        app:layout_constraintTop_toBottomOf="@id/tvAchTitle2" />

                     <ImageView
                        android:id="@+id/tvReward2"
                         android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_achievement_locked"
                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Achievement Item 3 -->
                  <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_glass_card"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAch3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icon_stat_power"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvAchTitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Power Overwhelming"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tvReward3"
                        app:layout_constraintStart_toEndOf="@id/imgAch3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reach 1000 Power stats"
                        android:textColor="@color/premium_text_secondary"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/tvAchTitle3"
                        app:layout_constraintStart_toStartOf="@id/tvAchTitle3"
                        app:layout_constraintTop_toBottomOf="@id/tvAchTitle3" />

                     <TextView
                        android:id="@+id/tvReward3"
                         android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badge"
                        android:textColor="@color/premium_power_red"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

