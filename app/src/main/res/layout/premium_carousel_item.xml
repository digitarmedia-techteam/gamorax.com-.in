<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carousel_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/carousel_item_selector"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <!-- Main content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background image -->
        <ImageView
            android:id="@+id/carousel_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/carousel_item_desc" />

        <!-- Gradient overlay for text readability -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/carousel_item_gradient" />

        <!-- Content overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="bottom">

            <!-- Category badge -->
            <TextView
                android:id="@+id/carousel_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_badge_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="FEATURED"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Title -->
            <TextView
                android:id="@+id/carousel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Game Title"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Subtitle/Meta info -->
            <TextView
                android:id="@+id/carousel_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Action â€¢ Adventure"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Neon border effect -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/neon_border_effect"
            android:visibility="gone" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
