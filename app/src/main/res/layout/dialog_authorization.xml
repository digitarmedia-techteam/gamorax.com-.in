<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="24dp">

    <!-- 1. CLOSE BUTTON (Top Right) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_secondary" />

    <!-- 2. MAIN CONTENT CONTAINER -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Controller Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Game Icon"
            android:src="@drawable/console" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play 100+ Games Instantly"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="No downloads â€¢ Free to play"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Primary Button (Green) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuest"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/btn_primary_green"
            android:text="Play as Guest"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Divider Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="or"
                android:textColor="@color/text_secondary" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#333333" />
        </LinearLayout>

        <!-- Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/darker_gray"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Continue with Google"
            android:textAllCaps="false"
            app:cornerRadius="27dp"
            app:icon="@drawable/google"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@null"
            app:strokeColor="#555555"
            app:strokeWidth="1dp" />

        <!-- Apple Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApple"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@android:color/darker_gray"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Continue with Apple"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="27dp"
            app:icon="@drawable/apple"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="@color/white"
            app:strokeColor="#555555"
            app:strokeWidth="1dp" />

        <!-- Email Link -->
        <TextView
            android:id="@+id/txtEmailLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Login with Email"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
