<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/glass_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/horizontalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Quick Play"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/horizontalTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Quick Play Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickCard1"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/neon_purple"
                app:strokeWidth="1dp">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Play Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickCard2"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Play Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickCard3"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/neon_purple"
                app:strokeWidth="1dp">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Play Card 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/quickCard4"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>