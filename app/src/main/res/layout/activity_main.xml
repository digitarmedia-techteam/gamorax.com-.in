<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context=".MainActivity">

    <!-- Top Glow Header -->
    <View
        android:id="@+id/headerGlow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/header_glow_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="GAMORAX"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/gameFlow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="card1,card2,card3,card4,card5,card6,card7,card8,card9,card10"
                app:flow_horizontalGap="16dp"
                app:flow_maxElementsWrap="2"
                app:flow_verticalGap="20dp"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Using a loop-like structure for cards (IDs preserved as card1-card10) -->
            
            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_cyan">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_purple">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_cyan">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_purple">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 5 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card5"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_cyan">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 6 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card6"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_purple">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 7 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card7"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_cyan">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 8 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card8"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_purple">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 9 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card9"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_cyan">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 10 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card10"
                style="@style/PremiumGameCard"
                app:strokeColor="@color/neon_purple">
                <include layout="@layout/item_game_content_premium" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Ad Container with glass effect -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glass_bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>